<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:minHeight="64dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/memo_round_gray_bg">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/memo_add_location"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/icon"
            android:textColor="@color/gray_69"
            android:textSize="16dp"
            tools:text="中科大厦（高新南三道）"/>

        <TextView
            android:id="@+id/tv_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/icon"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/gray_99"
            android:textSize="12dp"
            tools:text="中科大厦（高新南三道高新南三道高新南三道高新南三道高新南三道高新南三道高新南三道）"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@drawable/memo_gray_delete_icon"
            android:visibility="gone"
            tools:visibility="visible"/>
    </RelativeLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_content_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/memo_grid_item_bg"
    android:elevation="1dp"
    android:orientation="vertical">


    <com.hjhq.teamface.common.view.RoundImageView
        android:id="@+id/memo_pic"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_start_bg"
        android:visibility="gone"
        tools:background="@color/_00CFC9"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:maxLines="10"
        android:textColor="#333333"
        android:textSize="14dp"
        tools:text="工作计划会议"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/memo_pic">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#909090"
            android:textSize="14dp"
            tools:text="上午 10:44"/>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/memo_share_state_icon"
                android:visibility="gone"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_remind"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:padding="3dp"
                android:src="@drawable/memo_remind_orange_icon"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>

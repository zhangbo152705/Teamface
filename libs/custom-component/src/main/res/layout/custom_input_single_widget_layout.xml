<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/custom_widget_layout_style_v2">

    <LinearLayout
        android:id="@+id/ll_content"
        style="@style/custom_widget_layout_style"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_title"
            style="@style/custom_input_title_style"

            Tools:text="标题"/>

        <LinearLayout
            android:id="@+id/ll_input"
            style="@style/custom_widget_content_layout_style_row">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginStart="8dp"
                android:scaleType="centerInside"
                android:visibility="gone"
                Tools:src="@drawable/custom_icon_formula"
                Tools:visibility="visible"/>

            <EditText
                android:id="@+id/et_input"
                style="@style/custom_input_content_style"
                android:hint="@string/please_input_hint"
                Tools:text="222222222222222222222222222222222222222222222222"/>

            <ImageView
                android:id="@+id/iv_right"
                style="@style/custom_widget_icon_style"
                android:scaleType="centerInside"
                android:src="@drawable/repeat_check_icon"
                Tools:visibility="visible"/>
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/custom_widget_line_style"
        android:layout_below="@+id/ll_content"/>
</RelativeLayout>


    <ImageView
        android:id="@+id/iv_select"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:src="@drawable/finish" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/custom_widget_layout_style_v2">

    <LinearLayout
        android:id="@+id/ll_content"
        style="@style/custom_widget_layout_style"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            style="@style/custom_input_title_row_style"
            android:layout_gravity="top"
            Tools:text="635"/>

        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:minHeight="116dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_input"
                style="@style/custom_multi_text_input_style"
                android:layout_gravity="top|left"
                android:minHeight="110dp"
                Tools:text="阿斯顿发斯蒂芬撒打发了较为列就能发司法考试到家1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="0/500"
                    android:visibility="gone"
                    Tools:visibility="visible"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/custom_widget_line_style"
        android:layout_below="@+id/ll_content"/>
</RelativeLayout>

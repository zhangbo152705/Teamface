<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/default_app_backgroud_color"

              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_text"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/item_bg_color">

        <TextView
            android:id="@+id/tv_title"
            style="@style/crm_filter_item_title"
            tools:text="商品名称"/>

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/icon_sort_down"
            android:scaleType="center"/>
    </RelativeLayout>

    <View style="@style/default_lint_style"/>

    <LinearLayout
        android:id="@+id/ll_action_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3DB8C1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_input"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#3DB8C1">

            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:hint="输入关键字"
                android:textColor="@color/white"
                android:textColorHint="#fff"
                android:textSize="14sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:background="@color/white"/>

        <RelativeLayout
            android:id="@+id/rl_goods_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3DB8C1">

            <LinearLayout
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/check_input"
                    style="@style/crm_filter_item_radio_button"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:drawableRight="@drawable/crm_cb_in_filter_selector"
                    android:soundEffectsEnabled="false"
                    android:text="已填写"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"/>

                <CheckBox
                    android:id="@+id/check_null"
                    style="@style/crm_filter_item_radio_button"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:drawableRight="@drawable/crm_cb_in_filter_selector"
                    android:soundEffectsEnabled="false"
                    android:text="未填写"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
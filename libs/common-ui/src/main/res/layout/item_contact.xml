<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/gray_f2"
        android:gravity="center_vertical"
        android:paddingEnd="15dp"
        android:paddingStart="15dip"
        android:textColor="@color/gray_69"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="A"/>

    <RelativeLayout
        android:id="@+id/ll_item_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_unselect"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/avatar_in_contacts_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/iv_select"
            android:scaleType="fitXY"
            android:src="@drawable/ic_expression_hover"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/avatar_in_contacts_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:lines="1"
                android:textColor="@color/black_17"
                android:textSize="@dimen/text_size_16"
                tools:text="阿刘"/>

            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_bb"
                android:textSize="@dimen/text_size_14"
                tools:text="行政经理"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/iv_select"
            android:background="@color/gray_f2"/>
    </RelativeLayout>
</LinearLayout>
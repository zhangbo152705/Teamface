<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/rl_select"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_unselect"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/avatar_in_contacts_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/rl_select"
            android:scaleType="fitXY"
            android:src="@drawable/__picker_camera"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/avatar_in_contacts_iv"
            android:lines="1"
            android:textColor="@color/black_17"
            android:textSize="@dimen/text_size_16"
            tools:text="名字名字I"/>

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatar_in_contacts_iv"
            android:layout_toRightOf="@+id/avatar_in_contacts_iv"
            android:lines="1"
            android:textColor="@color/gray_bb"
            android:textSize="@dimen/text_size_14"
            tools:text="adfasfaeg@fda.afd"/>
    </RelativeLayout>


    <include layout="@layout/line"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_group_member"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_app_backgroud_color">

    <include
        android:id="@+id/search"
        layout="@layout/search_layout"/>

    <RelativeLayout
        android:id="@+id/rl_fake"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_search_fake"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_gray_search_bar">

            <TextView
                android:id="@+id/tv_fake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/search_icon"
                android:drawablePadding="2dp"
                android:lines="1"
                android:text="搜索"
                android:textSize="14dp"/>
        </RelativeLayout>


    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/search"
        android:background="@color/gray_a0"/>

    <RelativeLayout
        android:id="@+id/rl_at_all"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/line"
        android:background="@color/white"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_all"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_normal_group"/>

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_all"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:visibility="visible"
            tools:text="所有人"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/default_app_backgroud_color"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_at_all"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_group_member"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/dialog"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/side_dialog_bg"
        android:gravity="center"
        android:textColor="@color/main_green"
        android:textSize="30.0dip"
        android:visibility="invisible"
        tools:text="A"
        tools:visibility="visible"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <com.hjhq.teamface.common.view.SideBar
            android:id="@+id/sidrbar"
            android:layout_width="30.0dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center"/>
    </RelativeLayout>

</RelativeLayout>
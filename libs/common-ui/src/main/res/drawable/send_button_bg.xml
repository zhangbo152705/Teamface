<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/new_btn_bg_press" />

            <corners android:radius="3dp" />

            <padding android:bottom="@dimen/lines_width_or_height" android:left="@dimen/lines_width_or_height" android:right="@dimen/lines_width_or_height" android:top="@dimen/lines_width_or_height" />

            <stroke android:width="@dimen/lines_width_or_height" android:color="@color/line_color" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <solid android:color="#00be91" />

            <padding android:bottom="@dimen/lines_width_or_height" android:left="@dimen/lines_width_or_height" android:right="@dimen/lines_width_or_height" android:top="@dimen/lines_width_or_height" />

            <corners android:radius="3dp" />

            <stroke android:width="@dimen/lines_width_or_height" android:color="@color/line_color" />
        </shape></item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp">

    <ImageView android:padding="10dp"
        android:id="@+id/company_member_avatar_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/company_member_avatar"/>

    <TextView
        android:id="@+id/member_name_and_member_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/company_member_avatar_iv"
        android:text="名字"
        android:textSize="@dimen/text_size_20"/>
    <TextView
        android:id="@+id/member_title_and_member_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gray_a0"
        android:layout_toRightOf="@id/member_name_and_member_num"
        android:text="职务"
        android:textSize="@dimen/text_size_16"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="horizontal"
              android:scrollbars="none">
    <!--android:fillViewport="true"-->


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/main_ll"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_border_size"
            android:layout_marginRight="@dimen/margin_border_size"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="OneselfId"
                android:inputType="number"/>

            <EditText
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="senderId"
                android:inputType="number"/>

            <EditText
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="receiverId"
                android:inputType="number"/>
            <EditText
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="groupId"
                android:inputType="number"/>

            <EditText
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="消息内容"
                android:inputType="text"/>

            <EditText
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="返回内容"
                android:inputType="number"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="登录"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="发送单聊消息"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="发送群消息"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="清空"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="去单聊"/>
            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="去群聊"/>
            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="未定义1"/>
            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="未定义2"/>

            <TextClock
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/_FF1D32"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>

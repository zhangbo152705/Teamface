<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="170dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/face_viewPager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"/>

    <com.hjhq.teamface.emoji.EmojiIndicatorView
        android:id="@+id/face_indicator"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/ll_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="170dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/face_recent"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_face_text"
            android:gravity="center"
            android:text="@string/face_recently"
            android:textColor="#9E9E9E"/>

        <TextView
            android:id="@+id/face_first_set"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_face_text"
            android:gravity="center"
            android:text="@string/face_set_one"
            android:textColor="#9E9E9E"/>

        <View
            android:id="@+id/fill_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_face_text"/>
    </LinearLayout>

</FrameLayout>
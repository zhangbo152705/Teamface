<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <LinearLayout
        android:id="@+id/rl_num"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_info"
        android:layout_alignTop="@+id/ll_info"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.hjhq.teamface.common.view.DashView
            android:id="@+id/dash_line_top"
            android:layout_width="1dp"
            android:layout_height="18dp"
            app:dashOrientation="1"
            app:dashWidth="1dp"
            app:lineColor="@color/gray_a0"
            app:lineHeight="2dp"
            app:lineWidth="1dp"/>

        <View
            android:id="@+id/view_over"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/custom_approve_task_flow_gray_over_bg"
            android:visibility="gone"
            tools:background="@color/red"
            tools:visibility="visible"/>

        <com.hjhq.teamface.common.view.DashView
            android:id="@+id/view_over_line"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:visibility="visible"
            app:dashOrientation="1"
            app:dashWidth="1dp"
            app:lineColor="@color/gray_a0"
            app:lineHeight="2dp"
            app:lineWidth="1dp"
            tools:visibility="gone"/>

        <com.hjhq.teamface.common.view.DashView
            android:id="@+id/dash_line_bottom"
            android:layout_width="1dp"
            android:layout_height="203dp"
            app:dashOrientation="1"
            app:dashWidth="1dp"
            app:lineColor="@color/gray_a0"
            app:lineHeight="2dp"
            app:lineWidth="1dp"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_head_portrait"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/rl_num"
        android:scaleType="fitXY"
        android:src="@drawable/ic_expression_hover"/>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_head_portrait"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="15dp">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:maxEms="10"
                android:textColor="@color/black_4a"
                android:textSize="@dimen/text_size_16"
                tools:text="李磊"/>

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_state"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="10"
                android:textColor="@color/gray_bb"
                android:textSize="@dimen/text_size_14"
                tools:text="（阿斯蒂芬）"/>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:textColor="@color/gray_bb"
                android:textSize="@dimen/text_size_14"
                tools:text="已提交"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/blue_bg"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone"
            tools:text="提交审批"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_approveing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:textColor="#F94C4A"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone"
            tools:text="正在审批中..."
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/gray_bb"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone"
            tools:text="2017-03-12  10:30"
            tools:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_e7"/>
    </LinearLayout>


</RelativeLayout>
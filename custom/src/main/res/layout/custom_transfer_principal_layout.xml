<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="将当前数据的负责人成功转移给其他负责人后,该操作将无法恢复。"
        android:textColor="#666666"
        android:textSize="@dimen/text_size_14" />

    <LinearLayout style="@style/custom_horizontal_layout_style">

        <TextView
            android:id="@+id/tv_title"
            style="@style/custom_multi_text_horizontal_title_style"
            android:layout_marginStart="5dp"
            android:layout_marginTop="11dp"
            android:text="选择负责人" />

        <com.hjhq.teamface.basis.view.member.MembersView
            android:id="@+id/member_view"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:text="转移后是否确定共享给当前数据负责人？"
        android:textColor="@color/gray_69"
        android:textSize="14sp" />

    <include layout="@layout/line_margin" />


    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_select_value"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:text="是"
            android:textColor="@color/black_4a"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_right"
            style="@style/custom_default_icon_style"
            android:src="@drawable/icon_to_next" />
    </LinearLayout>


</LinearLayout>
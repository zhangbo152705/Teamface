<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_conversation_list_root"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white">

    <com.hjhq.teamface.basis.view.SwipeMenuLayout
        android:id="@+id/sml"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/iv_conversation_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                tools:src="@color/_5CC1FC"/>


            <RelativeLayout
                android:id="@+id/rl_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_conversation_avatar"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="12dp"
                    tools:text="03-33"/>

                <ImageView
                    android:id="@+id/iv_my_shared"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/project_share_state_icon"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@+id/tv_time"
                    android:ellipsize="middle"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black_4a"
                    android:textSize="16dp"
                    android:visibility="visible"
                    tools:text="张小发大水发发送到法师打发斯蒂芬放大法师打发打发是的发送天"/>


                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_my_shared"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/gray_bb"
                    android:textSize="14dp"
                    android:visibility="visible"
                    tools:text="花花"/>


            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/menu_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/put_on_top"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="#FFC442"
                android:gravity="center"
                android:text="置顶"
                android:textColor="@color/white"
                android:visibility="visible"/>

        </LinearLayout>
    </com.hjhq.teamface.basis.view.SwipeMenuLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_bb"/>


</RelativeLayout>

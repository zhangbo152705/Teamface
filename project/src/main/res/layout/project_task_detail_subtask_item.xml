<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/project_task_item_check" />

        <TextView
            android:id="@+id/tv_task_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            tools:text="这里是任务这里是任务这里是任务这里是任务这里是任务这里是任务这里是任务这里是任务这里是任务这里是任务这里是任务"
            android:textColor="@color/title_bar_txt_color"
            android:textSize="@dimen/text_size_14" />


        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="15dp"
            tools:src="@drawable/default_head_icon" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/project_icon_next" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/project_icon_clock"
        android:gravity="center_vertical"
        android:textColor="@color/gray_bb"
        android:textSize="@dimen/text_size_12"
        tools:text="01-21 12:30" />
</LinearLayout>
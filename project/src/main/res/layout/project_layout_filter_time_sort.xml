<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_f2" />

    <RelativeLayout
        android:id="@+id/rl_over_time"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingEnd="15dp"
        android:paddingStart="25dp">

        <TextView
            android:id="@+id/tv_over_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="超期未完成"
            android:textColor="@drawable/project_task_filter_text_color_selector"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/iv_over_time"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/project_navigation_selector" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_today"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingEnd="15dp"
        android:paddingStart="25dp">

        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="今天任务"
            android:textColor="@drawable/project_task_filter_text_color_selector"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/iv_today"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/project_navigation_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tomorrow"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingEnd="15dp"
        android:paddingStart="25dp">

        <TextView
            android:id="@+id/tv_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="明天任务"
            android:textColor="@drawable/project_task_filter_text_color_selector"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/iv_tomorrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/project_navigation_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_planned"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingEnd="15dp"
        android:paddingStart="25dp">

        <TextView
            android:id="@+id/tv_planned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="计划任务"
            android:textColor="@drawable/project_task_filter_text_color_selector"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/iv_planned"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/project_navigation_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_completed"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingEnd="15dp"
        android:paddingStart="25dp">

        <TextView
            android:id="@+id/tv_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="已完成"
            android:textColor="@drawable/project_task_filter_text_color_selector"
            android:textSize="@dimen/text_size_14"/>

        <ImageView
            android:id="@+id/iv_completed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/project_navigation_selector"/>
    </RelativeLayout>

</LinearLayout>
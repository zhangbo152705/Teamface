<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_conversation_list_root"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_menu"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/project_file_list_download_btn_bg"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:text="下载"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/rl_menu">

        <ImageView
            android:id="@+id/iv_conversation_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@color/_5CC1FC"/>


        <RelativeLayout
            android:id="@+id/rl_file"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_conversation_avatar"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_folder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="middle"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@color/black_4a"
                android:textSize="14dp"
                android:visibility="gone"
                tools:text="张小发大水发发送到法师打发斯蒂芬放大法师打发打发是的发送天"/>

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:ellipsize="middle"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@color/black_4a"
                android:textSize="14dp"
                android:visibility="visible"
                tools:text="张小发大水发发送到法师打发斯蒂芬放大法师打发打发是的发送天"/>


            <TextView
                android:id="@+id/tv_file_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@color/gray_bb"
                android:textSize="@dimen/text_size_12"
                android:visibility="visible"
                tools:text="花花"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/tv_file_owner"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@color/gray_bb"
                android:textSize="@dimen/text_size_12"
                android:visibility="visible"
                tools:text="2017-12-11 12:30"/>

            <TextView
                android:id="@+id/tv_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@color/gray_bb"
                android:textSize="@dimen/text_size_12"
                android:visibility="visible"
                tools:text="100KB"/>

        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_bb"/>


</RelativeLayout>

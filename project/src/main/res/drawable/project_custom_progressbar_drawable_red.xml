<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="50dip" />
            <gradient android:startColor="@color/gray_e7"
                android:centerColor="@color/gray_e7"
                android:endColor="@color/gray_e7"
                android:angle="270.0"
                android:centerY="2.0"  />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="50dip" />
                <gradient android:startColor="@color/item_must_color"
                    android:centerColor="@color/item_must_color"
                    android:endColor="@color/item_must_color"
                    android:angle="270.0"
                    android:centerY="2.0"  />
            </shape>
        </clip>
    </item>
</layer-list>
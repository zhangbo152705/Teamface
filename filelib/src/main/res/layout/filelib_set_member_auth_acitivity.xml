<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/line"/>


    <include
        layout="@layout/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"></include>

    <RelativeLayout
        android:id="@+id/act_coop_rl_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/act_coop_ivTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_auth_upload"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/act_coop_ivTwo"
            android:text="上传"
            android:textColor="@color/black_17"
            android:textSize="@dimen/text_size_18"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/act_coop_ivTwo"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/act_coop_ivTwo"
            android:text="成员可以在此文件夹下“上传”文件"
            android:textColor="@color/gray_a0"
            android:textSize="@dimen/text_size_12"/>

        <ImageView
            android:id="@+id/act_coop_iv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/finish"
            android:visibility="gone"/>
    </RelativeLayout>

    <include
        layout="@layout/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"></include>

    <RelativeLayout
        android:id="@+id/act_coop_rl_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/act_coop_ivThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_auth_download"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/act_coop_ivThree"
            android:text="下载"
            android:textColor="@color/black_17"
            android:textSize="@dimen/text_size_18"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/act_coop_ivThree"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/act_coop_ivThree"
            android:text="成员可以在此文件夹下“下载”文件"
            android:textColor="@color/gray_a0"
            android:textSize="@dimen/text_size_12"/>

        <ImageView
            android:id="@+id/act_coop_iv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/finish"
            android:visibility="gone"/>
    </RelativeLayout>

    <include
        layout="@layout/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"></include>

    <RelativeLayout
        android:id="@+id/act_coop_rl_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/act_coop_ivFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_auth_preview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/act_coop_ivFour"
            android:text="预览"
            android:textColor="@color/black_17"
            android:textSize="@dimen/text_size_18"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/act_coop_ivFour"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/act_coop_ivFour"
            android:text="成员可以在此文件夹下“查看、预览”文件"
            android:textColor="@color/gray_a0"
            android:textSize="@dimen/text_size_12"/>

        <ImageView
            android:id="@+id/act_coop_iv_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_default_check"
            android:visibility="visible"/>
    </RelativeLayout>
</LinearLayout>
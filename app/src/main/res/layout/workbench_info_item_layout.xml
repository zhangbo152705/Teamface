<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_workbeanch_sub_info"
    android:layout_width="match_parent"
    android:layout_height="130dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/workbench_task_background_white"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/rl_sub1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/iv_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/workbench_over_task"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_over"
                android:layout_marginTop="5dp"
                android:text="超期任务"
                android:textColor="@color/gray_90" />


            <TextView
                android:id="@+id/tv13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv11"
                android:layout_marginTop="5dp"
                android:textColor="@color/black_4a"
                tools:text="0" />

            <TextView
                android:id="@+id/tv12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:text="Overdue"
                android:textColor="#99FFFFFF"
                android:visibility="gone"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sub2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >



            <ImageView
                android:id="@+id/iv_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/workbench_today_task"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_today"
                android:text="今日任务"
                android:textColor="@color/gray_90"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv21"
                android:layout_marginTop="5dp"
                android:textColor="@color/black_4a"
                tools:text="0" />

            <TextView
                android:id="@+id/tv22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:text="Today"
                android:textColor="#99FFFFFF"
                android:visibility="gone"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sub3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_tommorow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/workbench_tommrow_task"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tv31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_tommorow"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="明日任务"
                android:textColor="@color/gray_90" />

            <TextView
                android:id="@+id/tv33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv31"
                android:layout_marginTop="5dp"
                android:textColor="@color/black_4a"
                tools:text="0" />

            <TextView
                android:id="@+id/tv32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:text="Tomorrow"
                android:textColor="#99FFFFFF"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sub4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/workbench_later_task"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_later"
                android:text="以后任务"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_90"
                />



            <TextView
                android:id="@+id/tv43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv41"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black_4a"
                tools:text="0" />

            <TextView
                android:id="@+id/tv42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:text="Later"
                android:textColor="#99FFFFFF"
                android:visibility="gone"/>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
